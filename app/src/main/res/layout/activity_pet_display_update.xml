<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetDisplayUpdate">

    <EditText
        android:id="@+id/et_v_update_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="120dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_update_age"
        app:layout_constraintEnd_toEndOf="@+id/btn_v_update_back"
        app:layout_constraintStart_toStartOf="@+id/btn_v_update_updatePetData"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_v_update_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="238dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_v_update_updatePetData"
        android:layout_width="132dp"
        android:layout_height="88dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="96dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_v_update_back"
        android:layout_width="122dp"
        android:layout_height="67dp"
        android:layout_marginStart="48dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_v_update_updatePetData"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.855" />

    <TextView
        android:id="@+id/tv_v_update_title"
        android:layout_width="246dp"
        android:layout_height="30dp"
        android:layout_marginBottom="500dp"
        android:text="Pet Info and Update"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />
</androidx.constraintlayout.widget.ConstraintLayout>